{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/AnnouncementEntryResponse",
    "definitions": {
        "AnnouncementEntryResponse": {
            "$ref": "#/definitions/EndpointResponse%3CAnnouncementEntry%3E",
            "description": "一個完整的公告資料 API 回應"
        },
        "EndpointResponse<AnnouncementEntry>": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": [
                        "string"
                    ],
                    "description": "JSON Schema 的地址。"
                },
                "updateAt": {
                    "type": "number",
                    "description": "資料更新時間\n\n是 Unix 時間戳記。"
                },
                "data": {
                    "$ref": "#/definitions/AnnouncementEntry",
                    "description": "主資料"
                }
            },
            "required": [
                "$schema",
                "updateAt",
                "data"
            ],
            "additionalProperties": false,
            "description": "Endpoint 應該回應的資料格式"
        },
        "AnnouncementEntry": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "content": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "公告內文\n\n已經使用 `sanitize-html` 清理及 `minify-html` 壓縮內容。"
                },
                "attachments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AnnouncementAttachment"
                    },
                    "description": "公告的附件名單"
                },
                "category": {
                    "type": "string",
                    "description": "公告分類"
                },
                "title": {
                    "type": "string",
                    "description": "公告標題"
                },
                "href": {
                    "type": "string",
                    "description": "公告指向的連結"
                },
                "date": {
                    "type": "string",
                    "description": "公告的發布日期"
                },
                "external": {
                    "type": "boolean",
                    "description": "公告是否是外部連結？\n\n如果連到外部連結，則不建立公告完整資料， 取用者可以直接將使用者導向 `href` 的連結。"
                }
            },
            "required": [
                "attachments",
                "category",
                "date",
                "external",
                "href",
                "title"
            ],
            "description": "一個完整的公告資料"
        },
        "AnnouncementAttachment": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "附件名稱"
                },
                "href": {
                    "type": "string",
                    "description": "附件連結"
                }
            },
            "required": [
                "name",
                "href"
            ],
            "additionalProperties": false,
            "description": "公告附件"
        }
    }
}